@model FootballFieldManagement.Models.Admin

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Màu nền nhẹ */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2f8e2b; /* Màu xanh lá cây bóng đá */
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        color: #2f8e2b;
        text-align: center;
    }

    h4 {
        color: #2f8e2b; /* Màu xanh lá cây cho tiêu đề phụ */
    }

    .col-sm-2 {
        color: #2f8e2b; /* Màu xanh lá cây cho nhãn */
        font-weight: bold;
    }

    .col-sm-10 {
        color: #333; /* Màu chữ đen cho thông tin */
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-back {
        color: #2f8e2b;
        text-decoration: none;
        margin-top: 15px;
        display: inline-block;
    }

        .btn-back:hover {
            color: #f39c12;
        }
</style>

<h1>Xóa quản trị viên</h1>

<h3>Bạn có chắc chắn muốn xóa quản trị viên này?</h3>

<div>
    <h4>Thông tin quản trị viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn-back" asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
