@model FootballFieldManagement.Models.Booking

@{
    ViewData["Title"] = "Chỉnh sửa Đặt sân";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Màu nền nhẹ */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2f8e2b; /* Màu xanh lá cây bóng đá */
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group label {
        color: #2f8e2b;
    }

    .form-control {
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #2f8e2b;
    }

        .form-control:focus {
            border-color: #1e6a33;
        }

    .btn-primary {
        background-color: #2f8e2b;
        border-color: #2f8e2b;
        color: white;
    }

        .btn-primary:hover {
            background-color: #1e6a33;
            border-color: #1e6a33;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #2f8e2b;
            color: white;
            font-weight: bold;
        }

        .table td {
            background-color: #ffffff;
        }

    .btn {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 3px;
        font-size: 14px;
    }

    .btn-back {
        background-color: #f39c12;
        color: white;
    }

        .btn-back:hover {
            opacity: 0.8;
        }
</style>

<h1>Chỉnh sửa Đặt sân</h1>

<h4>Đặt sân</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Khách hàng</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FieldId" class="control-label">Sân bóng</label>
                <select asp-for="FieldId" class="form-control" asp-items="ViewBag.FieldId"></select>
                <span asp-validation-for="FieldId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookingTime" class="control-label">Thời gian đặt</label>
                <input asp-for="BookingTime" class="form-control" />
                <span asp-validation-for="BookingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duration" class="control-label">Thời gian thuê</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label">Giá trị tổng</label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalServicePrice" class="control-label">Giá trị dịch vụ</label>
                <input asp-for="TotalServicePrice" class="form-control" />
                <span asp-validation-for="TotalServicePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label">Số tiền tổng cộng</label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-back">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
