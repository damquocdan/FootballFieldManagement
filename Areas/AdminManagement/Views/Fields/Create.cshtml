@model FootballFieldManagement.Models.Field

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Màu nền nhẹ */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2f8e2b; /* Màu xanh lá cây bóng đá */
        text-align: center;
        margin-bottom: 20px;
    }

    .create-container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .create-container label {
            color: #2f8e2b; /* Màu xanh lá cây cho nhãn */
        }

    .form-group input {
        margin-bottom: 10px;
    }

    .btn {
        background-color: #2f8e2b; /* Màu xanh lá cây cho nút */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #228c22;
        }

    .back-link {
        margin-top: 10px;
    }
</style>

<h1>Tạo Mới</h1>

<h4>Sân Bóng</h4>
<hr />
<div class="create-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FieldName" class="control-label">Tên Sân Bóng</label>
            <input asp-for="FieldName" class="form-control" />
            <span asp-validation-for="FieldName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="control-label">Sức Chứa</label>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Tạo Mới" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="back-link">
    <a asp-action="Index">Quay Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
