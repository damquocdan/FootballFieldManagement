@model FootballFieldManagement.Models.Field

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Màu nền nhẹ */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2f8e2b; /* Màu xanh lá cây bóng đá */
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .delete-container dt {
            font-weight: bold;
            color: #2f8e2b; /* Xanh lá cây cho tiêu đề */
        }

        .delete-container dd {
            font-size: 1.1em;
            margin-bottom: 15px;
        }

    .btn {
        background-color: #2f8e2b; /* Màu xanh lá cây cho nút */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-danger {
        background-color: #d9534f; /* Màu đỏ cho nút xóa */
    }

    .btn:hover {
        background-color: #228c22;
    }

    .back-link {
        margin-top: 10px;
    }
</style>

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa mục này không?</h3>

<div class="delete-container">
    <h4>Sân Bóng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FieldId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn">Quay Lại Danh Sách</a>
    </form>
</div>
