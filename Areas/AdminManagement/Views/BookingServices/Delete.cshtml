@model FootballFieldManagement.Models.BookingService

@{
    ViewData["Title"] = "Xóa Dịch Vụ Đặt Sân";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Màu nền nhẹ */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #2f8e2b; /* Màu xanh lá cây bóng đá */
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        color: #2f8e2b;
        font-size: 1.5rem;
        text-align: center;
        margin-bottom: 30px;
    }

    h4 {
        color: #2f8e2b;
        font-size: 1.2rem;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #2f8e2b;
    }

    .col-sm-10 {
        font-style: italic;
    }

    .btn-danger {
        background-color: #ff4d4d; /* Màu đỏ cho nút xóa */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
    }

        .btn-danger:hover {
            background-color: #e60000;
        }

    .btn-back {
        background-color: #f1f1f1;
        color: #2f8e2b;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
    }

        .btn-back:hover {
            background-color: #ddd;
        }
</style>

<h1>Xóa Dịch Vụ Đặt Sân</h1>

<h3>Bạn có chắc chắn muốn xóa dịch vụ này không?</h3>

<div>
    <h4>Thông Tin Dịch Vụ Đặt Sân</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.BookingId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingServiceId" />
        <input type="submit" value="Xóa" class="btn-danger" />
        <a asp-action="Index" class="btn-back">Quay lại Danh Sách</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
