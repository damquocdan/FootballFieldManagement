@model IEnumerable<FootballFieldManagement.Models.Booking>

@{
    ViewData["Title"] = "Danh Sách Sân Bóng Đã Đặt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Danh Sách Sân Bóng Đã Đặt</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookingTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalServicePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Field)
                </th>
                <th class="text-center">
                    <a class="btn btn-success" asp-controller="Fields" asp-action="Index">Đặt Sân Mới</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalServicePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Field.FieldName)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.BookingId">Chi Tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


    <style>
        /* Tùy chỉnh giao diện bảng */
        .table th, .table td {
            text-align: center;
        }

        /* Tùy chỉnh button */
        .btn {
            margin: 2px;
        }

        .btn-info, .btn-primary, .btn-danger {
            font-size: 14px;
            padding: 8px 15px;
        }

        .btn-sm {
            font-size: 12px;
        }

        .table-responsive {
            overflow-x: auto;
        }

        /* Tạo khoảng cách cho các button */
        .text-center a {
            margin-left: 5px;
        }
    </style>


