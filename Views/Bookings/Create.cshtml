@model FootballFieldManagement.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Booking</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Display Customer Info -->
            <div class="form-group">
                <label>Customer</label>
                <input type="text" class="form-control" value="@ViewData["CustomerName"]" readonly />
                <input type="hidden" asp-for="CustomerId" value="@ViewData["CustomerId"]" />
            </div>

            <!-- Display Field Info -->
            <div class="form-group">
                <label>Field</label>
                <input type="text" class="form-control" value="@ViewData["FieldName"]" readonly />
                <input type="hidden" asp-for="FieldId" value="@ViewData["FieldId"]" />
            </div>

            <!-- Booking Time -->
            <div class="form-group">
                <label asp-for="BookingTime" class="control-label"></label>
                <input asp-for="BookingTime" class="form-control" />
                <span asp-validation-for="BookingTime" class="text-danger"></span>
            </div>

            <!-- Duration -->
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <!-- Read-Only Calculated Fields -->
            <div class="form-group">
                <label>Total Price</label>
                <input type="text" class="form-control" value="@ViewData["TotalPrice"]" asp-for="TotalPrice" readonly />
            </div>
            <div class="form-group">
                <label>Total Service Price</label>
                <input type="text" class="form-control" value="@ViewData["TotalServicePrice"]" asp-for="TotalServicePrice" readonly />
            </div>
            <div class="form-group">
                <label>Total Amount</label>
                <input type="text" class="form-control" value="@ViewData["TotalAmount"]" asp-for="TotalAmount" readonly />
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
