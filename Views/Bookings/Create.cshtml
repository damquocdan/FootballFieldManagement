@model FootballFieldManagement.Models.Booking

@{
    ViewData["Title"] = "Tạo Đặt Sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Đặt Sân Bóng</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Thông tin khách hàng -->
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label for="CustomerName" class="w-40">Khách Hàng</label>
                        <input type="text" class="form-control w-60" value="@ViewData["CustomerName"]" readonly />
                    </div>
                    <input type="hidden" asp-for="CustomerId" value="@ViewData["CustomerId"]" />
                </div>

                <!-- Thông tin sân -->
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label for="FieldName" class="w-40">Sân</label>
                        <input type="text" class="form-control w-60" value="@ViewData["FieldName"]" readonly />
                    </div>
                    <input type="hidden" asp-for="FieldId" value="@ViewData["FieldId"]" />
                </div>

                <!-- Thời gian đặt sân -->
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label asp-for="BookingTime" class="w-40">Thời gian đặt sân</label>
                        <input asp-for="BookingTime" class="form-control w-60" placeholder="Chọn thời gian" />
                    </div>
                    <span asp-validation-for="BookingTime" class="text-danger"></span>
                </div>

                <!-- Thời gian sử dụng -->
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label asp-for="Duration" class="w-40">Thời gian (giờ)</label>
                        <input asp-for="Duration" class="form-control w-60" />
                    </div>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <!-- Các trường tính toán không thay đổi -->
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label class="w-40">Tổng Giá</label>
                        <input type="text" class="form-control w-60" value="@ViewData["TotalPrice"]" asp-for="TotalPrice" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label class="w-40">Tổng Giá Dịch Vụ</label>
                        <input type="text" class="form-control w-60" value="@ViewData["TotalServicePrice"]" asp-for="TotalServicePrice" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label class="w-40">Tổng Số Tiền</label>
                        <input type="text" class="form-control w-60" value="@ViewData["TotalAmount"]" asp-for="TotalAmount" readonly />
                    </div>
                </div>

                <!-- Nút submit -->
                <div class="form-group text-center">
                    <input type="submit" value="Đặt Sân" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <!-- Liên kết quay lại -->
    <div class="text-center mt-4">
        <a class="btn btn-secondary" onclick="window.history.back();">Quay lại Trang Chủ</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Cấu trúc container */
    .container {
        max-width: 800px;
        margin-top: 30px;
    }

    /* Làm đẹp các form input */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        font-size: 16px;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        box-shadow: 0 1px 3px rgba(0,0,0,.12);
    }

    /* Nút Submit */
    .btn {
        font-size: 16px;
        padding: 12px 20px;
        border-radius: 8px;
        box-shadow: 0 1px 3px rgba(0,0,0,.15);
    }

    .btn-lg {
        font-size: 18px;
        padding: 15px 25px;
    }

    /* Nút quay lại */
    .btn-secondary {
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #f8f9fa;
        color: #007bff;
        font-size: 16px;
        text-align: center;
    }

        .btn-secondary:hover {
            background-color: #007bff;
            color: #fff;
        }

    /* Căn chỉnh label và input ra 2 bên */
    .d-flex {
        display: flex;
        align-items: center;
    }

        .d-flex .w-40 {
            width: 40%;
            font-weight: bold;
            color:black
        }

        .d-flex .w-60 {
            width: 60%;
        }

    .text-center {
        text-align: center;
    }

    /* Giảm độ sáng cho các trường read-only */
    .form-control[readonly] {
        background-color: #f0f0f0;
        border-color: #d6d6d6;
    }

    /* Tùy chỉnh thông báo lỗi */
    .text-danger {
        font-size: 14px;
        color: #dc3545;
    }
</style>
