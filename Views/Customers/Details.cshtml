@model FootballFieldManagement.Models.Customer

@{
    ViewData["Title"] = "Thông tin chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Container styling */
    .details-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        /* Heading styling */
        .details-container h1 {
            text-align: center;
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        /* Section heading */
        .details-container h4 {
            color: #555;
            font-size: 18px;
            margin-bottom: 10px;
        }

    /* Key-value pairs */
    dl.row {
        margin: 0;
        padding: 0;
    }

    .row dt {
        font-weight: bold;
        color: #555;
        margin-bottom: 10px;
    }

    .row dd {
        margin-left: 0;
        color: #333;
        margin-bottom: 10px;
        border-bottom: 1px dashed #ddd;
        padding-bottom: 8px;
    }

    /* Buttons */
    .details-container a {
        display: inline-block;
        margin: 10px 5px;
        padding: 10px 20px;
        color: white;
        background-color: #007bff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .details-container a:hover {
            background-color: #0056b3;
        }

        /* Back link */
        .details-container a:last-child {
            background-color: #6c757d;
        }

            .details-container a:last-child:hover {
                background-color: #5a6268;
            }
</style>

<div class="details-container">
    <h1>Thông tin chi tiết khách hàng</h1>

    <div>
        <h4>Thông tin khách hàng</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Tên đăng nhập</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">Mật khẩu</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-4">Số điện thoại</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-4">Địa chỉ</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.CustomerId">Chỉnh sửa</a>
        <a onclick="window.history.back();">Quay lại danh sách</a>
    </div>
</div>
