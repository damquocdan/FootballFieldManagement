@model FootballFieldManagement.Models.LoginC

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<style>
    body {
        background-color: #e9f7df; /* Light green background for football field theme */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .login-box {
        width: 400px;
        margin: auto;
        margin-top: 100px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        border-radius: 12px;
        background-color: #fff;
        text-align: center;
        border: 2px solid #2d6a4f; /* Dark green for a football field feel */
        background-image: url('~/images/football-field.jpg'); /* Football field background */
        background-size: cover;
        background-position: center;
    }

    .login-title {
        font-weight: 700;
        font-size: 32px;
        color: #2d6a4f;
        margin-bottom: 20px;
        font-family: 'Cursive', sans-serif;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Text shadow for a sporty look */
    }

    .custom-input {
        border-radius: 8px;
        margin-top: 15px;
        height: 45px;
        padding-left: 15px;
        font-size: 16px;
        border: 2px solid #2d6a4f;
        box-shadow: 0 0 5px rgba(45, 106, 79, 0.3);
    }

        .custom-input:focus {
            border-color: #f4a261;
            box-shadow: 0 0 5px rgba(244, 162, 97, 0.6);
        }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        background-color: #2d6a4f;
        border: none;
        padding: 12px;
        color: white;
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #1f4f38;
        }

    .alert {
        margin-top: 20px;
        font-size: 14px;
    }

        .alert ul {
            list-style-type: none;
            padding: 0;
        }

        .alert li {
            margin-bottom: 5px;
        }

    /* Adjust form input for a cleaner look */
    .form-control-lg {
        font-size: 16px;
    }
</style>

<div class="login-box">
    <div class="login-title">Khách hàng đăng nhập</div>
    <form asp-action="Index" method="post">
        <!-- Email input -->
        <input asp-for="Email" type="email" class="custom-input form-control form-control-lg"
               placeholder="Email" />

        <!-- Password input -->
        <input asp-for="Password" type="password" class="custom-input form-control form-control-lg"
               placeholder="Mật khẩu" required />

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
</div>
