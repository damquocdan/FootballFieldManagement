@model FootballFieldManagement.Models.LoginC

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<style>
    body {
        background-color: #ffe2de; /* Soft pink background */
        font-family: 'Arial', sans-serif;
    }

    .login-box {
        width: 400px;
        margin: auto;
        margin-top: 100px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        padding: 30px;
        border-radius: 12px;
        background-color: #fff;
        text-align: center;
        border: 1px solid #f04236; /* Soft red border for a bakery feel */
    }

    .login-title {
        font-weight: 700;
        font-size: 28px;
        color: #f04236;
        margin-bottom: 20px;
        font-family: 'Cursive', sans-serif; /* Add a playful font style */
    }

    .custom-input {
        border-radius: 8px;
        margin-top: 10px;
        height: 45px;
        padding-left: 15px;
        font-size: 16px;
    }

        .custom-input:focus {
            border-color: #f04236;
            box-shadow: 0 0 5px rgba(240, 66, 54, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 8px;
        background-color: #f04236;
        border: none;
        padding: 12px;
        color: white;
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #e03a2d;
        }

    .alert {
        margin-top: 20px;
        font-size: 14px;
    }

        .alert ul {
            list-style-type: none;
            padding: 0;
        }

        .alert li {
            margin-bottom: 5px;
        }
</style>

<div class="login-box">
    <div class="login-title">Khách hàng đăng nhập</div>
    <form asp-action="Index" method="post">
        <!-- Email input -->
        <input asp-for="Email" type="email" class="custom-input form-control form-control-lg"
               placeholder="Email" />

        <!-- Password input -->
        <input asp-for="Password" type="password" class="custom-input form-control form-control-lg"
               placeholder="Mật khẩu" required />

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
</div>
